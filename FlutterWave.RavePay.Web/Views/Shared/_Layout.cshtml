<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - FlutterWave RavePay.Net Examples</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/form-validation.css" />
    </environment>
</head>
<body class="bg-light">
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
            <h2>RavePay Payment Examples</h2>
            <p class="lead">This is a sample .NET project that demonstrates the features of the Flutterwave <a href="https://ravepay.co">RavePay</a> API implemented as a <a href="https://github.com/okezieokpara/FlutterWave.RavePay.Net">.NET Library</a></p>
            
        </div>

        <div class="row">
            <div class="col-md-8 order-md-1">
                @RenderBody()
            </div>
            @Html.Partial("_SideBar")
        </div>
        <hr />
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017-2018 Company Name</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>

        <environment include="Development">
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
            <script src="~/lib/popper.js/dist/popper.min.js"></script>
            <script src="~/lib/holderjs/holder.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
        </environment>

      

        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
